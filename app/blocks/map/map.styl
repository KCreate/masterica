.map
	position relative
	overflow hidden
	&__obj
		width 100% 
		height 521px
	&__in
		position absolute
		top 0
		left 50%
		margin-left -600px
		padding-top 68px
		width 1200px
		text-align center
	&__ul
		margin-bottom 57px
		font-size 0
		clearfix()
	&__i
		margin-left 70px
		display inline-block
		vertical-align top
		cursor pointer
		&:first-child
			margin-left 0
		&--style-1
			sprite($shop-1)
		&--style-2
			margin-top 8px
			sprite($shop-2)
		&--style-3
			margin-top 9px
			sprite($shop-3)
		&--style-4
			margin-top 8px
			sprite($shop-4)
	&__shop
		margin 0 auto -10px 
		padding 1px
		width 399px 
		background-color white
		border 5px solid #f8f2b3
		border-radius 10px 10px 0 0
		&__w
			padding 15px 30px 10px
			background $color-mapbg
			border-radius 5px 5px 0 0
.shop
	&__i
		margin-bottom 16px
		font-reg(14px,16px)
		color $color-black
	&__title
		font-reg(14px,16px)
		color $color-shoplink
		text-decoration underline
		&:hover
			text-decoration none

			
		
		