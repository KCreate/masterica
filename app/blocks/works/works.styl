.works
	position relative
	background $color-blue
	&:before,
	&:after
		position absolute
		content "" 
	&:before
		top -25px
		left 0
		width 100%
		height 25px 
		background url('data:image/png;base64,') 0 0 repeat-x 
	&__in
		margin auto
		padding-top 31px
		padding-bottom 45px
		width 1005px
		text-align center
	&__title
		position relative
		margin-bottom 29px
		@extend .title
		color $color-white 
		
+from-width(0)
	.works
		&__in
			max-width 100%
			width auto

+from-width(1017px)
	.works
		&__in
			max-width 1005px
	
		

